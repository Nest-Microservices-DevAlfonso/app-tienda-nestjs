model Ingredient {
  id         String         @id     @default(uuid())
  name       String         @unique //IngredientName
  quantity   Int

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([name])
}

model OrderPurchase {
  id               String         @id     @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  OrderPurchaseDetail OrderPurchaseDetail[]
}


model OrderPurchaseDetail {
  id                String         @id     @default(uuid())
  ingredient        String         
  quantity          Int 
  orderPurchaseid   String 

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([orderPurchaseid])
  orderPurchase   OrderPurchase   @relation(fields: [orderPurchaseid], references: [id])


}